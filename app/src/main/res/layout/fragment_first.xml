<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black2"
    tools:context=".onBoard.FirstFragment">

    <TextView
        android:id="@+id/txt_skip"
        android:layout_width="93dp"
        android:layout_height="23dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="19dp"
        android:text="@string/Skip"
        android:textColor="@color/gold"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lotti_1"
        android:layout_width="287dp"
        android:layout_height="264dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="107dp"
        android:autofillHints="@string/functional"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_rawRes="@raw/second_onboarding" />



    <TextView
        android:layout_width="226dp"
        android:layout_height="24dp"
        android:layout_marginTop="40dp"
        android:paddingStart="15dp"
        android:text="@string/functional"
        android:textColor="@color/white1"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lotti_1" />


</androidx.constraintlayout.widget.ConstraintLayout>