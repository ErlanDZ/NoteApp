<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black1"
    tools:context=".ui.home.HomeFragment">

    <EditText
        android:id="@+id/edit_search"
        android:layout_marginTop="@dimen/textSize16"
        android:textColor="@color/grey1"
        android:textSize="@dimen/Size18"
        android:drawableLeft="@drawable/ic_baseline_search_24"
        android:paddingStart="@dimen/Size19"
        android:drawablePadding="@dimen/Size17"
        android:hint="@string/search"
        android:textColorHint="@color/grey4"
        android:layout_marginHorizontal="@dimen/Size28"
        android:background="@drawable/oval3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Size40"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_home_fragment"
        app:layout_constraintTop_toBottomOf="@id/edit_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>